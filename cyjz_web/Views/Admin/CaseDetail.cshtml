@model MH.Rescue.BIZ.patientcase

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>会诊详细信息</title>
</head>
<body>
    <div>
        <h4>会诊详细信息</h4>
        <hr />
        <dl class="dl-horizontal">
           
            <dt>
                病例标题
            </dt>

            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>
             <dt>
                病例概述
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
    
            <dt>
                患者性别
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.gender)
            </dd>
    
            <dt>
                患者出生日期
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.birthday)
            </dd>
    
            <dt>
                患者体重
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.weight)
            </dd>
    
            <dt>
                患者身高
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.height)
            </dd>
    
            <dt>
                患者职业
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.occupation)
            </dd>
    
            <dt>
                主诉
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.chief_complaint)
            </dd>
    
            <dt>
                现病史
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.present_illness_history)
            </dd>
    
            <dt>
                初步诊断
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.primary_diagnosis)
            </dd>
    
            <dt>
                治疗方案
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.treatment_plan)
            </dd>
    
            <dt>
                继往病史
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.past_history)
            </dd>
    
            <dt>
                个人病史
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.personal_history)
            </dd>
    
            <dt>
                家族病史
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.family_history)
            </dd>
    
            <dt>
                过敏史
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.allergy_history)
            </dd>
            <dt>
                申请人姓名
            </dt>

            <dd>
                @Html.DisplayFor(model => model.owner_name)
            </dd>    
            <dt>
                申请日期
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.created_dt)
            </dd>
    
            <dt>
                最后编辑日期
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.modified_dt)
            </dd>
    
            <dt>
                审核状态
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.status)
            </dd>
    
            <dt>
                审核批准日期
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.admission_dt)
            </dd>
    
            <dt>
                审核未通过原因
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.rejected_reason)
            </dd>
    
  

    

        </dl>
    </div>
    <p>
        @Html.ActionLink("查看图片", "CaseImage", new { id = Model.id }) |
        @Html.ActionLink("通过", "CaseConfirm", new { id = Model.id }) |
        @Html.ActionLink("拒绝", "CaseReject", new { id = Model.id }) |
        @Html.ActionLink("删除", "CaseDelete", new { id = Model.id })
        @Html.ActionLink("返回会诊列表", "CaseList")
    </p>
</body>
</html>
