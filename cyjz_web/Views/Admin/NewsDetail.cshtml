@model MH.Rescue.BIZ.news

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新闻详情</title>
</head>
<body>
    <div>
        <h4>新闻详情</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                标题
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>
    
            <dt>
               作者
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.author_name)
            </dd>
    
            <dt>
                作者单位
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.author_org)
            </dd>
    
            <dt>
                内容
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.contents)
            </dd>
    
   
            <dt>
                提交人
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.post_user_name)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.post_dt)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.post_dt)
            </dd>
    
        </dl>
    </div>
    <p>
        @Html.ActionLink("删除", "NewsDelete", new { id = Model.id }) |
        @Html.ActionLink("返回新闻列表", "NewsList")
    </p>
</body>
</html>
