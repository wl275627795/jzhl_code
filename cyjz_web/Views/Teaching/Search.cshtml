
<div data-page="teaching-search" class="page navbar-fixed no-toolbar no-tabbar no-main-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="/teaching/index" class="back link icon-only color-white">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                教学查询
            </div>
            <div class="right">
            </div>
        </div>
    </div>

    <div class="page-content">

        <form id="formTeachingSearch" class="list-block">
            <ul>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">标题或关键字</div>
                            <div class="item-input">
                                <input type="text" name="title" placeholder="">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">发布日期自</div>
                            <div class="item-input">
                                <input type="date" name="fromDT" value="@(DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd"))">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">发布日期到</div>
                            <div class="item-input">
                                <input type="date" name="toDT" value="@(DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd"))">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">讲师姓名</div>
                            <div class="item-input">
                                <input type="text" name="teacher_name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">讲师单位</div>
                            <div class="item-input">
                                <input type="text" name="teacher_org">
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </form>

        <div class="content-block">
            <div class="row">
                <div class="col-50">
                    <a href="#" class="button button-big button-fill color-blue button-raised active" onclick="TeachingSearch()">查询</a>
                </div>
                <div class="col-50">
                    <a href="#" class="button button-big button-raised" onclick="document.getElementById('formTeachingSearch').reset()">重置</a>
                </div>
            </div>
        </div>

    </div>

</div>
