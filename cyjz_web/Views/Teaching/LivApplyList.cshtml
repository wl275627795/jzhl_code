@using MH.Rescue.BIZ
@model List<teaching_apply>

@{
    var user = ViewBag.CurrentUser as user_account;
}
<div data-page="liv-apply-list" class="page navbar-fixed no-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="#" class="back link icon-only color-white">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                已报名观众列表
            </div>
            <div class="right">
            </div>
        </div>
    </div>

    <div class="page-content">
        @if (Model == null || Model.Count == 0)
            {
            <div style="padding:150px 20px; text-align:center;">
                <i class="f7-icons" style="font-size:120px; opacity:0.2;">persons</i>
                <div style="padding:15px;">
                    目前没有已报名的观众
                </div>
            </div>
            }
            else
            {
            <div class="list-block media-list no-margin-top-2">
                <ul>
                    @foreach (var item in Model)
                        {
                        <li>
                            <div class="item-content">
                                <div class="item-media">
                                    <img src="~/Contents/image/avatar/default/@(item.user_account.avatar)" width="44">
                                </div>
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">@item.user_account.name @item.user_account.title</div>
                                    </div>
                                    <div class="item-subtitle" style="opacity:0.5;">@item.user_account.hospital_name @item.user_account.department_name</div>
                                </div>
                            </div>
                        </li>
                        }
                </ul>
            </div>
            }
    </div>

</div>
