@using MH.Rescue.BIZ
@model patientcase_image

@{
    var user = ViewBag.CurrentUser as user_account;
}

<div data-page="patientcase-image-edit" class="page navbar-fixed toolbar-fixed no-tabbar no-main-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="/patientcase/edit?tab=3&id=@(Model.case_id)" class="back link icon-only color-white" data-force="true">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                编辑附件图片
            </div>
            <div class="right">
            </div>
        </div>
    </div>

    <div class="page-content">

        <div class="card">
            <div class="card-header">@Model.cmn_image.path</div>
            <div class="card-content">
                <img src="/FileUpload/patientcase/@(Model.case_id)/@(Model.cmn_image.path)" style="width:100%; padding:0px 0;" />
                <div class="list-block">
                    <ul>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-input">
                                        <textarea id="txtPatientCaseImageDescrip" name="descrip" placeholder="在此填写图片描述内容">@Model.description</textarea>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer">
                <a href="#" class="link" onclick="SavePatientCaseImageEdit(@Model.case_id, @Model.id)">
                    <i class="f7-icons">check_round</i>
                    <span>保存</span>
                </a>
                <a href="#" class="link color-red" onclick="DeletePatientCaseImage(@Model.case_id, @Model.id)">
                    <i class="f7-icons">trash</i>
                    <span>删除</span>
                </a>
            </div>
        </div>
    </div>

</div>
