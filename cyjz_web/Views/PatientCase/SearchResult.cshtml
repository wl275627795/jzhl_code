@using MH.Rescue.BIZ
@model List<patientcase>

<div data-page="patientcase-search-result" class="page navbar-fixed no-tabbar no-main-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="/patientcase/search" class="back link icon-only color-white">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                查询结果
            </div>
            <div class="right">
                <a href="/patientcase/index" class="link color-white">
                    <i class="f7-icons">close_round</i>
                    <span>关闭</span>
                </a>
            </div>
        </div>
    </div>

    <div class="page-content">
        @if (Model == null || Model.Count == 0)
        {
            <div style="padding:150px 20px; text-align:center;">
                <i class="f7-icons" style="font-size:120px; opacity:0.2;">search_strong</i>
                <div style="padding:15px; opacity:0.5;">没有符合查询条件的结果</div>
            </div>
        }
        else
        {
            <div class="list-block no-margin-top">
                <ul>
                    @foreach (var item in Model)
                {
                        <li>
                            <a href="/patientcase/detail?fromsearch=true&id=@item.id" class="item-link item-content">
                                <div class="item-media">
                                    <i class="f7-icons color-blue">drawers</i>
                                </div>
                                <div class="item-inner">
                                    <div class="item-title">@item.title</div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
