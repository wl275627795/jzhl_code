@using MH.Rescue.BIZ
@model List<article>

<div class="list-block media-list no-margin-top-2">
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a href="/article/detail?id=@(item.id)" class="item-link item-content">
                    <div class="item-inner">
                        <div class="item-title-row">
                            <div class="item-title">@item.title</div>
                        </div>
                        <div class="item-subtitle">@item.publish_dt.ToShortDateString() · @item.author_name</div>
                        <div class="item-text">@item.summary</div>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>