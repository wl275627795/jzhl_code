
<div data-page="register" class="page navbar-fixed no-toolbar no-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="#" class="back link icon-only color-white">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                新用户注册
            </div>
            <div class="right">
                    <a href="#" class="link color-white" onclick="SubmitRegister()">
                        <i class="f7-icons color-white">check_round</i>
                        <span>提交</span>
                    </a>
            </div>
        </div>
    </div>

    <div class="page-content">
        <form id="formRegister" class="list-block">
            <ul>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                手机号码
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="mobile_number" placeholder="必填项">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                登录密码
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="password" name="password" placeholder="请输入登录密码">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                重复密码
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="password" name="password2" placeholder="请再次输入登录密码">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">所在医院
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="hospital_name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">所在科室
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="department_name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                昵称
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="account">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                真实姓名
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                电子邮箱
                                <span class="color-red"></span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="email" placeholder="用于找回登录密码">
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </form>

        <div class="content-block">
            <div class="row">
                <div class="col-50">
                    <a href="#" class="button button-big button-fill color-blue button-raised active" onclick="SubmitRegister()">提交注册</a>
                </div>
                <div class="col-50">
                    <a href="#" class="button button-big button-raised" onclick="document.getElementById('formRegister').reset()">重置</a>
                </div>
            </div>
        </div>
    </div>

</div>
