@using MH.Rescue.BIZ
@model List<message>

@{
    var user = ViewBag.CurrentUser as user_account;
}

<div data-page="sessionmessage" class="page navbar-fixed no-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="/account/mymessages" class="back link icon-only color-white" data-force="true">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                与 XXX 的对话消息
            </div>
            <div class="right">
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="list-block media-list no-margin-top-2">
            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <div class="item-content">
                            <div class="item-media">
                                <img src="~/Contents/image/avatar/default/@(item.send_user.avatar)" width="44">
                            </div>
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div>@item.message_sender_name</div>
                                </div>
                                <div class="item-subtitle" style="opacity:0.5;">@item.sent_dt.ToString(MH.CMN.Const.DateTimeFormat)  @item.title</div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="detail-title">@item.message_content</div>
                            </div>
                        </div>
                    </li>
                }

            </ul>

        </div>
    </div>

</div>
