@using MH.CMN
@using MH.Rescue.BIZ
@model message

<div data-page="message" class="page navbar-fixed no-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="/account/mymessages" class="back link icon-only color-white" data-force="true">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                来自 @(Model.message_sender_name) 的消息
            </div>
            <div class="right">
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="list-block media-list no-margin-top-2">
            <ul>
                <li>
                    <div class="item-content">
                        <div class="item-media">
                            <img src="~/Contents/image/avatar/default/@(Model.send_user.avatar)" width="44">
                        </div>
                        <div class="item-inner">
                            <div class="item-title-row">
                                <div>@Model.message_sender_name</div>
                            </div>
                            <div class="item-subtitle" style="opacity:0.5;">@Model.sent_dt.ToString(Const.DateTimeFormat)  @Model.title</div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="detail-title">@Model.message_content</div>
                        </div>
                    </div>
                 </li>
            </ul>
            <div class="content-block">
                <div class="row">
                    <div class="col-50">
                        <a href="#" class="button button-big button-fill color-red" onclick="MessageIsDeleted(@Model.id, true)">删除</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
