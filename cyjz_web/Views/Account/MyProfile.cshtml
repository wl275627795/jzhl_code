@using MH.Rescue.BIZ
@model user_account

<div data-page="my-profile" class="page navbar-fixed no-tabbar page-on-center">

    <div class="navbar bg-blue color-white">
        <div class="navbar-inner">
            <div class="left">
                <a href="/account/index" class="back link icon-only color-white">
                    <i class="icon icon-back color-white"></i>
                </a>
            </div>
            <div class="center">
                个人账号信息
            </div>
            <div class="right">
                <a href="#" class="link color-white" onclick="SaveMyProfile()">
                    <i class="f7-icons color-white">check_round</i>
                    <span>保存</span>
                </a>
            </div>
        </div>
    </div>

    <div class="page-content" style="padding-bottom:80px;">

        <div class="content-block-title">个人信息</div>
        <form id="formMyProfile" class="list-block">
            <input type="hidden" name="id" value="@Model.id" />
            <ul>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                手机号码
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text"  name="mobile_number" value="@Model.mobile_number" readonly ="readonly">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">
                                姓名
                                <span class="color-red">*</span>
                            </div>
                            <div class="item-input">
                                <input type="text" name="name" value="@Model.name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">就职医院</div>
                            <div class="item-input">
                                <input type="text" name="hospital_name" placeholder="请输入所在医院名称" value="@Model.hospital_name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">科室</div>
                            <div class="item-input">
                                <input type="text" name="department_name" placeholder="请输入科室名称" value="@Model.department_name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">职务头衔</div>
                            <div class="item-input">
                                <input type="text" name="title" value="@Model.title">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">性别</div>
                            <div class="item-input">
                                @Html.EnumDropDownListFor(t => t.gender)
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">出生日期</div>
                            <div class="item-input">
                                <input type="date" name="birthday" value="@(Model.birthday != null ? Model.birthday.Value.ToString("yyyy-MM-dd") :"")">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">电子邮箱</div>
                            <div class="item-input">
                                <input type="text" name="email" value="@Model.email">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <a href="/account/setavatar" class="item-link item-content">
                        <div class="item-inner">
                            <div class="item-title">设置头像</div>
                        </div>
                    </a>
                </li>
            </ul>
        </form>

        <div class="content-block-title">登录密码</div>
        <div class="list-block">
            <ul>
                <li>
                    <a href="/account/changepassword" class="item-link item-content">
                        <div class="item-inner">
                            <div class="item-title">修改密码</div>
                        </div>
                    </a>
                </li>
            </ul>
        </div>

        <div class="content-block buttons-row">
            <a href="#" class="button button-big button-fill button-raised color-red" onclick="Signout()">
                退出登录
            </a>
        </div>

    </div>

</div>
